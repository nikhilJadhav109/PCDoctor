@model List<Product>
<div class="container">

    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h4 class="text-uppercase text-secondary">Product List</h4>
        </div>
        <div class="col-6 text-uppercase text-end ">
            <a asp-controller="Product" asp-action="CreateNewProduct" class="btn btn-danger ">
                <i class="bi bi-patch-plus"></i>&nbsp Create new Product
            </a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr class="table-dark">
                <th class="text-uppercase text-body-secondary">
                    <h5> Name </h5>
                </th>
                @* <th class="text-uppercase text-body-secondary">
                    <h5> Description </h5>
                </th> *@
                <th class="text-uppercase text-body-secondary">
                    <h5> Manufacturer </h5>
                </th>
                <th class="text-uppercase text-body-secondary">
                    <h5> Price </h5>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(o=>o.Price))
            {
                <tr>
                    <td>@obj.Name</td>
                    @* <td>@obj.Description</td> *@
                    <td >@obj.Manufacturer</td>
                    <td >@obj.Price</td>
                    <td>
                        <div class="btn-group w-75 bor" role="group">
                            @* tag-helpers                              helper to send data to controller*@
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 ">
                                <i class="bi bi-pencil-square"></i> &nbsp Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 ">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
