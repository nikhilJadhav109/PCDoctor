@model Category


<form method="post">
    <div class="pt-3 mt-5 " >
        <div class="row pb-2">
            <h3 class="text-uppercase text-secondary p-0">Create&nbsp Category</h3>
        <hr />
        </div>

    <div class="form-group row ">
            <label asp-for="Name" class="form-label p-0"> </label>
            <input asp-for="Name" class="form-control" placeholder="Category Name" />   
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
            <label asp-for="DisplayOrder" class="form-label mt-4 p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>


    <div class="row mt-4">
        <div class="col-6 col-md-3 ">
            <button type="submit" class="btn btn-outline-primary form-control ">Create</button>
        </div>

        <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-light form-control ">Back To List</a>
        </div>
    </div>

    </div>
</form>


@* script tag to add client side validation *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}